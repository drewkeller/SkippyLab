<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Skippy.Controls.SliderBar">
  <ContentView.Content>
        <StackLayout Orientation="Vertical">
            <Label Text="{Binding Source=Slider, Path=Value}" HorizontalOptions="CenterAndExpand" />
            <Slider x:Name="Slider" HorizontalOptions="CenterAndExpand" Minimum="0" Maximum="100" />
        </StackLayout>
    </ContentView.Content>
</ContentView>