<?xml version="1.0" encoding="UTF-8"?>
<rxui:ReactiveContentPage
    x:Class="Skippy.Views.ScopePage"
    x:TypeArguments="vm:ScopeVM"
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
    xmlns:ufg="clr-namespace:UniformGrid;assembly=Skippy"
    xmlns:statebutton="clr-namespace:Xamarin.CustomControls;assembly=Xamarin.CustomControls.StateButton"
    xmlns:accordion="clr-namespace:Xamarin.CustomControls;assembly=Xamarin.CustomControls.AccordionView"
    xmlns:local="clr-namespace:Skippy;assembly=Skippy"
    xmlns:vm="clr-namespace:Skippy.ViewModels;assembly=Skippy"
    xmlns:view="clr-namespace:Skippy.Views;assembly=Skippy"
    >

    <ContentPage.Content>

        <StackLayout Orientation="Horizontal">

            <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" >
                <Image x:Name="BlankScreenImage" 
                        Aspect="AspectFit" HeightRequest="480" WidthRequest="800"
                        MinimumHeightRequest="480" MinimumWidthRequest="800"
                        HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" 
                        />
                <Image x:Name="ScopeScreenImage" BackgroundColor="Pink"
                        Aspect="AspectFit" HeightRequest="480" WidthRequest="800"
                        HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" 
                        />
                <ContentView HorizontalOptions="StartAndExpand" VerticalOptions="End">
                    <ScrollView Orientation="Horizontal" HorizontalOptions="StartAndExpand">
                        <accordion:AccordionView x:Name="pnlChannels" Orientation="Horizontal" HorizontalOptions="StartAndExpand" />
                        <!--<StackLayout x:Name="pnlChannels" Orientation="Horizontal" />-->
                    </ScrollView>
                </ContentView>
            </StackLayout>

            <StackLayout Grid.Column="1" VerticalOptions="Center" HorizontalOptions="EndAndExpand" MinimumHeightRequest="200">
                <ScrollView Orientation="Vertical">
                    <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">

                        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                            <Label Text="Auto refresh screen" VerticalOptions="Center"/>
                            <Switch x:Name="uiAutorefresh" VerticalOptions="Center"/>
                            <StackLayout x:Name="uiScreenRefreshRatePanel" Orientation="Horizontal" HorizontalOptions="EndAndExpand"
                                     IsEnabled="{Binding Source={x:Reference uiAutorefresh}, Path=IsToggled}">
                                <Label Text="rate" HorizontalOptions="End" VerticalOptions="Center"/>
                                <Entry x:Name="uiScreenRefreshRate" HorizontalOptions="CenterAndExpand" VerticalOptions="Center"/>
                                <Label Text="ms" HorizontalOptions="End" VerticalOptions="Center"/>
                            </StackLayout>
                        </StackLayout>

                        <Button x:Name="RefreshScreenButton" Text="Refresh Now" HorizontalOptions="FillAndExpand" />
                        <Label Text="Screenshot folder" Margin="0,10,0,0" />
                        <Label x:Name="ScreenshotFolder"/>
                        <Button x:Name="CopyFolderButton" Text="Copy" />
                        <Label x:Name="uiScreenshotFolderError" Text="Screenshot folder not found" IsVisible="False" TextColor="Red"/>
                        <Button x:Name="SaveScreenshotButton" Text="Save Screenshot" HorizontalOptions="FillAndExpand" WidthRequest="200" />

                        <view:TriggerView/>

                        <view:TimebaseView/>
                        
                    </StackLayout>
                </ScrollView>
            </StackLayout>

        </StackLayout>

    </ContentPage.Content>
</rxui:ReactiveContentPage>